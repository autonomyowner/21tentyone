# Database (Render PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Redis (Upstash)
REDIS_URL=rediss://default:password@host:6379

# App
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Clerk
CLERK_SECRET_KEY=sk_test_xxx
CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_WEBHOOK_SECRET=whsec_xxx

# Cloudflare R2
R2_ACCOUNT_ID=xxx
R2_ENDPOINT=https://xxx.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=xxx
R2_SECRET_ACCESS_KEY=xxx
R2_BUCKET_NAME=matcha-storage

# OpenRouter AI - Tiered Models
OPENROUTER_API_KEY=sk-or-v1-xxx
OPENROUTER_MODEL=openai/gpt-4o-mini

# Fast model - used for regular conversation turns (cost-effective)
OPENROUTER_FAST_MODEL=openai/gpt-4o-mini

# Deep model - used for final analysis, every 5th message, and complex emotional content
OPENROUTER_DEEP_MODEL=anthropic/claude-sonnet-4

# Extended thinking budget (tokens) - used with deep model for thorough analysis
OPENROUTER_THINKING_BUDGET=10000

# Temperature settings (0.0-1.0)
# Fast: higher for more creative conversational responses
# Deep: lower for more precise and accurate analysis
OPENROUTER_FAST_TEMPERATURE=0.7
OPENROUTER_DEEP_TEMPERATURE=0.3
