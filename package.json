{
  "name": "t21",
  "version": "1.0.0",
  "description": "21|Twenty One - Heal Your Attachment, Build Healthy Relationships",
  "private": true,
  "workspaces": [
    "apps/client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run convex:dev\"",
    "dev:client": "npm --workspace t21-client run dev",
    "convex:dev": "cd apps/client && npx convex dev",
    "convex:deploy": "cd apps/client && npx convex deploy",
    "build": "npm --workspace t21-client run build",
    "start": "npm --workspace t21-client run start",
    "lint": "npm --workspace t21-client run lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
